{
	"name": "hyprsettings-ui",
	"type": "module",
	"private": true,
	"scripts": {
		"prestart": "hyprsettings -k &",
		"dev:parallel": "concurrently -n py,vt -c cyan,magenta \"cd ../../ && sh ./run.sh --bun-dev --debug || true\" \"vite\"",
		"dev": "bun run prestart && bun run dev:parallel",
		"old_dev": "hyprsettings -k && vite",
		"build": "vite build",
		"preview": "vite preview",
		"clean-font": "glyphhanger --delay=5000 --whitelist=\"U+E000-U+F8FF,U+F0000-U+FFFFD\" --formats=woff2 --subset=../ui-src/public/fonts/CommitMonoNerdFontMono-Regular.otf --output=../ui-src/public/fonts/ http://localhost:6969/"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/prismjs": "^1.26.5",
		"concurrently": "^9.2.1",
		"rollup-plugin-visualizer": "^6.0.5",
		"sass": "^1.97.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"front-matter": "^4.0.2",
		"hastscript": "^9.0.1",
		"hotkeys-js": "^4.0.0",
		"lit": "^3.3.2",
		"prismjs": "^1.30.0",
		"rehype-sanitize": "^6.0.0",
		"rehype-stringify": "^10.0.1",
		"remark": "^15.0.1",
		"remark-directive": "^4.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"tippy.js": "^6.3.7",
		"unified": "^11.0.5",
		"vfile-matter": "^5.0.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"trustedDependencies": [
		"@parcel/watcher",
		"esbuild"
	]
}
